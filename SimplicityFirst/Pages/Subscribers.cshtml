@page
@model SubscribersModel

<div class="max-w-content mx-auto px-6 py-24 pt-32">
    <div class="mb-8">
        <div class="accent-line mb-6"></div>
        <h1 class="font-display text-5xl tracking-tight">Book Launch Subscribers</h1>
        <p class="mt-2 text-sf-muted text-sm">@Model.Subscribers.Count total</p>
    </div>

    @if (Model.Subscribers.Count == 0)
    {
        <p class="text-gray-400">No subscribers yet.</p>
    }
    else
    {
        <div class="overflow-x-auto border border-sf-border rounded-sm">
            <table class="w-full text-sm text-left">
                <thead class="bg-sf-surface text-sf-muted uppercase text-xs tracking-wider">
                    <tr>
                        <th class="px-6 py-3">#</th>
                        <th class="px-6 py-3">Email</th>
                        <th class="px-6 py-3">Subscribed (UTC)</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-sf-border">
                    @for (var i = 0; i < Model.Subscribers.Count; i++)
                    {
                        var sub = Model.Subscribers[i];
                        <tr class="hover:bg-sf-surface/50 transition-colors">
                            <td class="px-6 py-3 text-sf-muted font-mono">@(i + 1)</td>
                            <td class="px-6 py-3 text-white">@sub.Email</td>
                            <td class="px-6 py-3 text-gray-400 font-mono">@sub.SubscribedAtUtc.ToString("yyyy-MM-dd HH:mm:ss")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
